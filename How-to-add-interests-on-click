<script>

var interests = [];

document.getElementById("demo").innerHTML = interests;

function addDancing() {
	interests.push("Dancing");
    document.getElementById("demo").innerHTML = interests
}
function addFortnite() {
	interests.push("Fortnite");
    document.getElementById("demo").innerHTML = interests
}
function addPiano() {
	interests.push("Piano");
    document.getElementById("demo").innerHTML = interests
}
function addSoccer() {
	interests.push("Soccer");
    document.getElementById("demo").innerHTML = interests
}
function addBasketball() {
	interests.push("Basketball");
    document.getElementById("demo").innerHTML = interests
}
function addFootball() {
	interests.push("Football");
    document.getElementById("demo").innerHTML = interests
}
function addMemes() {
	interests.push("Memes");
    document.getElementById("demo").innerHTML = interests
}
function addMath() {
	interests.push("Math");
    document.getElementById("demo").innerHTML = interests
}
function addDrawing() {
	interests.push("Drawing");
    document.getElementById("demo").innerHTML = interests
}
function addDogspotting() {
	interests.push("Dogspotting");
    document.getElementById("demo").innerHTML = interests
}
function addReading() {
	interests.push("Reading");
    document.getElementById("demo").innerHTML = interests
}
function addHistory() {
	interests.push("History");
    document.getElementById("demo").innerHTML = interests
}

</script>
</head>

<body>

<h2>JavaScript in Head</h2>

<p id="demo">A Paragraph.</p>

<button type="button" onclick="addDancing()">Dancing</button>
